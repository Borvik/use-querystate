{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "ES2022"
    ],
    "allowJs": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "removeComments": true,
    "noImplicitAny": true,
    "jsx": "react",
    "declaration": true,
    "outDir": "./dist",
    "noEmit": false
  },
  "files": [
    "src/index.ts"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/__tests__/**/*"
  ]
}
